{
    "name": "ortic/css-converter",
    "description": "css to less and scss converter",
    "minimum-stability": "stable",
    "license": "proprietary",
    "authors": [
        {
            "name": "Remo Laubacher",
            "email": "remo.laubacher@ortic.com"
        }
    ],
    "require": {
        "php": ">=5.4.4",
        "natxet/cssmin": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "satooshi/php-coveralls": "dev-master",
        "friendsofphp/php-cs-fixer": "^2.3",
        "nette/nette": "~2.1.3",
        "apigen/apigen": "2.8.0"
    },
    "autoload": {
        "psr-4": {
            "Ortic\\CssConverter\\": "src/"
        }
    },
    "bin": [
        "bin/cssConverter.bat",
        "bin/cssConverter"
    ],
    "scripts": {
        "test": "phpunit",
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix src"
    }
}
